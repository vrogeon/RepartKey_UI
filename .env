# .env.example - Exemple de configuration des variables d'environnement
# Copiez ce fichier en .env et modifiez les valeurs

# Environment (development, production, testing)
FLASK_ENV=development

# Secret key pour la sécurité (générez une clé complexe en production)
# Pour générer une clé: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-in-production

# Base de données (optionnel, par défaut SQLite)
# Pour PostgreSQL: postgresql://user:password@localhost/dbname
# Pour MySQL: mysql://user:password@localhost/dbname
# DATABASE_URL=sqlite:///repartkey.db

# Configuration email (pour les notifications futures)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Configuration de sécurité
# SESSION_COOKIE_SECURE=True  # Activer en production avec HTTPS
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# Limites
MAX_CONTENT_LENGTH=16777216  # 16MB en octets

# Dossiers (chemins relatifs ou absolus)
# UPLOAD_FOLDER=Courbes
# EXPORT_FOLDER=Export

# Options de debug (ne jamais activer en production)
# DEBUG=False
# TESTING=False